<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: black;" styleClass="black-bg" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.uaspbo_voidthreat_kapalangkasa.controller.MainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="211.0" fitWidth="533.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@assets/logo.png" />
      </image>
   </ImageView>
    <Button fx:id="playButton" onAction="#handlePlayGame" prefHeight="83.0" prefWidth="111.0" style="-fx-background-color: transparent;" text="Play" textFill="WHITE">
      <font>
         <Font size="35.0" />
      </font></Button>
   <Button fx:id="recordButton" onAction="#handleRecordButton" prefHeight="75.0" prefWidth="157.0" style="-fx-background-color: transparen;" text="Record" textFill="WHITE">
      <font>
         <Font size="35.0" />
      </font>
   </Button>
   <Button fx:id="exitButton" onAction="#handleExit" prefHeight="45.0" prefWidth="101.0" style="-fx-background-color: transparen;" text="Exit" textFill="WHITE">
      <font>
         <Font size="35.0" />
      </font>
   </Button>
</VBox>
